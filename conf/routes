# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       	Application.index

#Warehouse Routeları

GET	 	/warehouse                                 	Warehouses.index
POST 	/warehouse									Warehouses.addWareHouse
DELETE 	/warehouse/{id}								Warehouses.delete
*		/warehouse/{action}							Warehouses.{action}

#Product Routeları

GET 	/product										Products.index
* 		/product/{action}								Products.{action}

#Inventory Routeları

GET		/inventory										Inventories.index
POST	/inventory										Inventories.saveDispatch
* 		/inventory/{action}								Inventories.{action}


# Ignore favicon requests
GET     /favicon.ico                            	404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                	staticDir:public

# Catch all
*       /{controller}/{action}                  	{controller}.{action}
